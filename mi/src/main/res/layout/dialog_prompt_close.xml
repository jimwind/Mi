<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/round_corner_solid_ffffff_r6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="17sp"
            android:text="标题"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="15sp"
                android:text="message" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content">

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="115dp"
                android:layout_height="34dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/round_corner_solid_37bb52_r5"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/neutralButton"
                android:layout_width="115dp"
                android:layout_height="34dp"
                android:textSize="15sp"
                android:background="@drawable/round_corner_solid_37bb52_r5"
                android:text="知道了"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="115dp"
                android:layout_height="34dp"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_corner_solid_c6c6c6_r5"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:visibility="visible" />
            <TextView
                android:id="@+id/bigButton"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textSize="15sp"
                android:background="@drawable/round_corner_solid_37bb52_r5"
                android:text="@string/ok"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_popup"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>